                                                @Mode
                                            </a>
                                        </h5>
                                    </div>
                                </div>
                            }
                           
                        </div>
                    </div> *@
                  
                    <div class="widget-box">
                        <h4 class="widget-title">Tags</h4>
                        <div class="tag-widget-box">
                            <ul class="tag-list">
                              @foreach (var item in Model.blog.blogtags)
                                {
                                    <li><a href="#0">@item.tag.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    End Blog
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
