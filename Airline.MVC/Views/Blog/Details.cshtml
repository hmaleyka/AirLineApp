<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Blog
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<section class="blog-section blog-classic blog-details ptb-120">
    <div class="container">
        <div class="row justify-content-center mb-30-none">
            <div class="col-xl-8 col-lg-8 mb-30">
                <div class="row justify-content-center mb-30-none">
                    <div class="col-xl-12 mb-30">
                        <div class="blog-item">
                            <div class="blog-thumb">
                                <img src="~/Upload/Blog/@Model.blog.ImgUrl" alt="blog">
                            </div>
                            <div class="blog-content">
                                <span class="sub-title">@Model.blog.Title</span>
                                <h3 class="title">
                                    @Model.blog.Description
                                </h3>
                                <p>
                                   @Model.blog.About
                                </p>
                              
                                <p>
                                    The first small jet-powered civil aircraft was the Morane-Saulnier MS.760
                                    Paris, developed privately in the early 1950s from the MS.755 Fleuret
                                    two-seat jet trainer. First flown in 1954, the MS.760 Paris differs from
                                    subsequent business jets in having only four seats arranged in two rows
                                    without a center aisle.
                                </p>
                                <div class="blog-widget-thumb-area">
                                    <div class="row justify-content-center mb-20-none">
                                       @foreach (var item in Model.blog.blogphotos)
                                        {
                                            <div class="col-xl-6 col-lg-6 col-md-6 mb-20">
                                                <div class="blog-widget-thumb">
                                                    <img src="~/Upload/Blog/@item.Imgurl" alt="blog">
                                                </div>
                                            </div>
                                        }
                                       
                                    </div>
                                </div>
                               
                                <p>
                                    @Model.blog.Description
                                </p>
                                <div class="blog-tag-wrapper">
                                    <span>Tags:</span>
                                    <ul class="blog-footer-tag">
                                        @foreach (var item in Model.blog.blogtags)
                                        {
                                            <li><a href="#0">@item.tag.Name</a></li>
                                        }
                                    </ul>
                                </div>
                                <nav>
                                   
                                </nav>
                               
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 mb-30">
                <div class="sidebar">
                 
                    @* <div class="widget-box mb-30">
                        <h4 class="widget-title">Our other Blogs</h4>
                        <div class="popular-widget-box">
                            @foreach (var item in Model.blog.)
