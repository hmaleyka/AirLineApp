@using Airline.Core.Entities;
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Banner
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
@model List<Blog>
<section class="banner-section inner-banner-section bg-overlay-black bg_img"
        >
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-xl-12 text-center">
                <div class="banner-content">
                    <h1 class="title">Blog</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Blog</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    End Banner
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Scroll-To-Top
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<a href="#" class="scrollToTop">
    <i class="las la-dot-circle"></i>
    <span>Top</span>
</a>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    End Scroll-To-Top
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Call-widget
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    End Call-widget
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Blog
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<section class="blog-section ptb-120">
    <div class="container">
        <div class="row justify-content-center mb-30-none">
            <div class="col-xl-8 col-lg-8 mb-30">
                <div class="row justify-content-center mb-30-none">
                    @foreach (var item in Model)
                    {
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 mb-30">
                        <div class="blog-item">
                            <div class="blog-thumb">
                                <img src="~/Upload/Blog/@item.ImgUrl" alt="blog">
                            </div>
                            <div class="blog-content">
                                <div class="blog-post-meta">
                                    <span class="date">@item.date</span>
                                   
                                </div>
                                <h3 class="title">
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                        @item.Title
                                    </a>
                                </h3>
                                <p>
                                    @item.Description
                                </p>
                                <div class="blog-btn">
                                    <a href="blog-details.html">
                                        Read More <i class="icon-Group-2361 ml-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                        
                    }
                    
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 mb-30">
                <div class="sidebar">
                   
                    <div class="widget-box mb-30">
                        <h4 class="widget-title">Our Interesting Blogs</h4>
                        <div class="popular-widget-box">
                           @foreach (var item in Model)
                            {
                                <div class="single-popular-item d-flex flex-wrap align-items-center">
                                    <div class="popular-item-thumb" style="width:100px">
                                        <img src="~/Upload/Blog/@item.ImgUrl" alt="blog>
                                    </div>
                                    <div class="popular-item-content">
                                        <span class="blog-date">@item.date</span>
                                        <h5 class="title">
                                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                              @item.Title
                                            </a>
                                        </h5>
                                    </div>
                                </div>
                            }
                           
                        </div>
                    </div>
                  
                  
                </div>
            </div>
        </div>
     
    </div>
</section>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
End Blog
