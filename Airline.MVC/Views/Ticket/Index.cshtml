@using Airline.Core.Entities;

@model List<Ticket>

<section class="banner-section inner-banner-section bg-overlay-black bg_img"
       >
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-xl-12 text-center">
                <div class="banner-content">
                    <h1 class="title">Your Ticket</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Account</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Ticket Details</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <td>
                            <a class="btn btn-warning" asp-controller="Ticket" asp-action="BarCode" >Get QRCode for communicate later</a>

                        </td>
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">From</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">To</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Flight Date</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Seat</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model)
                                {
                                    
                                
                                    <tr>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.flight.From</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.flight.To</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.flight.flightdate</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.flight.Price</p>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">

                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.seat</h6>
                                                </div>
                                            </div>
                                        </td>
                                       
                                       @*  <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.</p>
                                        </td> *@    
                                       


                                       
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>