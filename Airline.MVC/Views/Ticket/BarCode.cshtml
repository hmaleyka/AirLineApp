@section Scripts{

    <script>
        $(document).ready(function () {
            $(".hideDiv").hide();
            $("#QRCodeType").trigger("change");
            $("#btn-reset").on("click", function () {
                window.location.reload();
            });
        });

        function onQRCodeTypeChange() {
            let qrcodeType = $("#QRCodeType").val();
            $(".hideDiv").hide();
            $("#DIV" + qrcodeType).show();
        }
    </script>
}

