@using Airline.Business.ViewModel.BlogVM;
@model CreateBlogVM

<div class=" container">


    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title">
            <span asp-validation-for="Title" style=" color: red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"> Description</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" style=" color: red"></span>
        </div>
        <div class="mb-3" col-md-3 style="margin-right: 30px;">
            <label asp-for="About" class="form-label">About</label>
            <input asp-for="About" class="form-control">
            <span asp-validation-for="About" style="color: red"></span>
        </div>
        <div class="form-group">
            <label asp-for="date"> date</label>
            <input class="form-control" asp-for="date">
            <span asp-validation-for="date" style=" color: red"></span>
        </div>
        <div class="row">
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="Image" class="form-label">Image</label>
                <input asp-for="Image" class="form-control">
                <span asp-validation-for="Image" style="color: red"></span>
            </div>
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="blogphotos" class="form-label">blogphotos</label>
                <input asp-for="blogphotos" class="form-control">
                <span asp-validation-for="blogphotos" style="color: red"></span>
            </div>
            <div class="form-group">
                <select asp-for="tagIds" class="form-select" aria-label="Default select example">

                    @foreach (var item in ViewBag.Tags)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span class="text text-danger" asp-validation-for="tagIds"></span>
            </div>
            <div class="form-group">


        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

