@using Airline.Core.Entities;

@model Blog
@{
    int tagcount = 0;
}
<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h4 class="mb-1">Title: </h4>
            <h3 style="font-size: 15px">@Model.Title</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">DateTime: </h4>
            <h3 style="font-size: 15px">@Model.date</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">About: </h4>
            <h3 style="font-size: 15px">@Model.About</h3>
        </div>
   

    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4> Description: </h4>
            <p style="font-size: 15px">@Model.Description</p>
        </div>
    </div>
  

    <h4 class="mt-4">Blog Image:</h4>
    <div class="row align-items-start">

        <div class="col-2 mb-3 position-relative">
            <img style="width: 175px; border-radius: 5px;" src="~/Upload/Blog/@Model.ImgUrl" />
        </div>

    </div>


    <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary mt-5">Go Back</a>

</div>
