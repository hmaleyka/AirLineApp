@using Airline.Core.Entities;
@model Flight

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h4 class="mb-1">From: </h4>
            <h3 style="font-size: 15px">@Model.From</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">To: </h4>
            <h3 style="font-size: 15px">@Model.To</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">Seat: </h4>
            <h3 style="font-size: 15px">@Model.Seat</h3>
        </div>


    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4> Price: </h4>
            <p style="font-size: 15px">@Model.Price</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4> Date Time: </h4>
            <p style="font-size: 15px">@Model.flightdate</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>People List:</h4>
            @if (Model.People != null && Model.People.Any())
            {
                <ul style="font-size: 15px">
                    @foreach (var ticket in Model.People)
                    {
                        <li>@ticket.user.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>No people listed.</p>
            }
        </div>
    </div>


    


    <a asp-controller="Flight" asp-action="Index" class="btn btn-secondary mt-5">Go Back</a>

</div>