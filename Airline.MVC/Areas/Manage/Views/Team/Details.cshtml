@using Airline.Core.Entities;
@model Team


<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h4 class="mb-1">Name Surname: </h4>
            <h3 style="font-size: 15px">@Model.Fullname</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">Experience: </h4>
            <h3 style="font-size: 15px">@Model.Experience</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">Email: </h4>
            <h3 style="font-size: 15px">@Model.email</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">Number: </h4>
            <h3 style="font-size: 15px">@Model.number</h3>
        </div>
        <div class="col-md-6">
            <h4 style="font-size: 30px">About Me: </h4>
            <h3 style="font-size: 15px">@Model.AboutMe</h3>
        </div>
      
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4> Description: </h4>
            <p style="font-size: 15px">@Model.Description</p>
        </div>
    </div>

    <h4 class="mt-4">Employee Image:</h4>
    <div class="row align-items-start">
        
            <div class="col-2 mb-3 position-relative">
                <img style="width: 175px; border-radius: 5px;" src="~/Upload/Team/@Model.ImgUrl" />
            </div>
        
    </div>


    <a asp-controller="Team" asp-action="Index" class="btn btn-secondary mt-5">Go Back</a>

</div>

